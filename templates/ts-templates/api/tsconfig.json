{
    "compilerOptions": {
      "target": "ES6",
      "module": "nodenext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "allowJs": true,
    "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  