{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@views/*": ["views/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@utils/*": ["utils/*"],
      "@routes/*": ["routes/*"],
      "@db/*": ["db/*"]
    }
  },
  "include": [
    "server.ts",
    "controllers/**/*",
    "models/**/*",
    "views/**/*",
    "interfaces/**/*",
    "middlewares/**/*",
    "utils/**/*",
    "routes/**/*"
  ],
  "exclude": ["node_modules"]
}
